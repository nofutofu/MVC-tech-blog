{{#each posts as |post|}}
  <div class='post-wrapper'>
    <div class='title-box'>
      <h2 class='post-title'>{{post.postTitle}}</h2>
      <p class='timestamp'>Posted by
        {{post.user.username}}
        on
        {{format_date post.date_created}}</p>
    </div>
    <div class='post-text'>
      <p>{{post.postText}}</p>
    </div>
  </div>
{{/each}}