<div class='post-wrap'>
  <h2 class='post-header'>Create New Post</h2>

  <form class='new-post-form'>
    <div class='form-wrap'>
      <label for='title'>Title</label>
      <input clas='form-input' type='text' id='post-title' />
    </div>
    <div class='form-wrap'>
      <label for='content'>Content</label>
      <input class='form-input' type='text' id='post-content' />
    </div>
    <div class='form-wrap'>
      <button class='btn' type='submit'>Create</button>
    </div>
  </form>
</div>